{
	"compilerOptions": {
		"verbatimModuleSyntax": true,
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"moduleResolution": "node",
		"jsx": "preserve",
		"sourceMap": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.svelte",
		"src/index.ts"
	],
	"exclude": [
		"node_modules"
	]
}